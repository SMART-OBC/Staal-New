<?xml version="1.0"?>
<odoo>
    <data>
        <record id="view_move_form_inherit_weight" model="ir.ui.view">
            <field name="name">account.move.form.weight.sale</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='product_uom_id']" position="after">
                    <field name="weight"/>
                    <field name="weight_total"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
