<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="action_report_picking_invoice" model="ir.actions.report">
            <field name="name">Picking / Invoice</field>
            <field name="model">sale.order</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">sales_weight.report_picking_invoice</field>
            <field name="report_file">sales_weight.report_picking_invoice</field>
            <field name="print_report_name">(object.state in ('draft', 'sent') and 'Quotation - %s' % (object.name)) or 'Order - %s' % (object.name)</field>
            <field name="binding_model_id" ref="sale.model_sale_order"/>
            <field name="binding_type">report</field>
        </record>

        <record id="action_report_invoice_with_picking_barcode" model="ir.actions.report">
            <field name="name">Invoice with Picking Barcode</field>
            <field name="model">sale.order</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">sales_weight.report_invoice_with_picking_barcode</field>
            <field name="report_file">sales_weight.report_invoice_with_picking_barcode</field>
            <field name="print_report_name">(object.state in ('draft', 'sent') and 'Quotation - %s' % (object.name)) or 'Order - %s' % (object.name)</field>
            <field name="binding_model_id" ref="sale.model_sale_order"/>
            <field name="binding_type">report</field>
        </record>
    </data>
</odoo>
