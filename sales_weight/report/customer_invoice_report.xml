<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_customer_invoice_weight_document_inherit_sale" inherit_id="account.report_invoice_document">
        <xpath expr="//div[@id='informations']/div[@name='reference']" position="after">
            <div class="col-auto col-3 mw-100 mb-2" t-if="o.invoice_user_id" name="salesperson">
                <strong>Salesperson:</strong>
                <p class="m-0" t-field="o.invoice_user_id.name"/>
            </div>
        </xpath>
        <xpath expr="//table[@name='invoice_line_table']/thead/tr/th[@name='th_quantity']" position="after">
            <th name="th_weight_total" class="text-center">
                <span>Weight(kg)</span>
            </th>
        </xpath>
        <xpath expr="//table[@name='invoice_line_table']/tbody/t[@t-foreach]/tr/t/td[2]" position="after">
            <td class="text-center">
                <span t-field="line.weight_total"/>
            </td>
        </xpath>
    </template>


</odoo>