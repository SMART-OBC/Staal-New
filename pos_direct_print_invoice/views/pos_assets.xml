<odoo>
    <record id="pos_config_view_form_pos_direct_print_invoice" model="ir.ui.view">
        <field name="name">pos.config.form.pos_direct_print_invoice</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='receipt']" position="inside">
                <div class="col-12 col-lg-6 o_setting_box" id="pos_direct_print_invoice">
                    <div class="o_setting_left_pane">
                        <field name="direct_print_invoice"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="direct_print_invoice"/>
                        <div class="text-muted">
                            You can direct print invoice on receipt screen.
                        </div>
                        <div class="content-group mt16" attrs="{'invisible': [('direct_print_invoice', '=', False)]}">
                            <div class="row mt16">
                                <label string="Invoice Journal" for="invoice_journal_id" class="col-lg-3 o_light_label"/>
                                <field name="invoice_journal_id"
                                        domain="[('company_id', '=', company_id), ('type', '=', 'sale')]"
                                       attrs="{'required': [('direct_print_invoice', '=', True)]}"
                                       context="{'default_company_id': company_id, 'default_type': 'sale'}"/>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>